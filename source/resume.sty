%   #3\\%
% }
\newcommand{\project}[3]{%
  \textbf{#1}%
  \if\relax\detokenize{#2}\relax\hfill%
  \else\hfill \href{#2}{#2}%
  \fi\\[-2pt]%
  #3\vspace{2pt}%
}


